{
  "pluginAlias": "Xiaomi",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Xiaomi"
      },
      "devices": {
        "type": "array",
        "title": "Devices",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "displayName": {
              "title": "Display Name",
              "type": "string",
              "required": true
            },
            "ipAddress": {
              "title": "Local Network Address",
              "type": "string",
              "required": true
            },
            "token": {
              "title": "Device Token",
              "type": "string",
              "required": true
            }
          }
        }
      }
    }
  }
}
